---
import logoMark from "../icons/logoMark.png";
const navItems = [
  { title: "Features", url: "#features" },
  { title: "Compatibility", url: "#compatibility" },
  { title: "Download", url: "#download" },
];
---

<header id="page-header">
  <a id="page-header-logo" href="#intro">
    <img src={logoMark} />
    <label>KETCH IN</label>
  </a>
  <ul id="page-header-menu">
    {
      navItems.map(({ title, url }) => {
        return (
          <li class="page-header-menu-item">
            <a href={url}>{title}</a>
          </li>
        );
      })
    }
    <li class="page-header-menu-item menu-scroll">Github</li>
  </ul>
</header>

<script>
  const page = document.documentElement;
  const header = document.querySelector("#page-header") as HTMLElement;

  const handleScroll = () => {
    const d = page.clientHeight - page.scrollTop - header.offsetHeight;
    header.classList.toggle("fixed", d < 0);
  };

  document.addEventListener("scroll", handleScroll);

  handleScroll();
</script>

<style>
  #page-header {
    width: calc(100vw - 40px);
    padding: 20px;
    position: absolute;
    bottom: 0px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 1.2rem;
    height: 2rem;
    z-index: 100;
    color: white;
  }

  #page-header.fixed {
    position: fixed;
    top: 0px;
    bottom: auto;
    color: white;
    background-color: black;
    color: white;
  }

  #page-header-logo {
    display: flex;
    align-items: center;
    user-select: none;
    cursor: pointer;
    background: white;
    border-radius: 10px;
    color: black;
    padding: 0.2rem 1rem;
  }

  #page-header-logo img {
    width: 3rem;
    padding-right: 10px;
  }

  #page-header-menu {
    list-style-type: none;
    padding-inline-start: 0px;
    margin-block-start: 0px;
    margin-inline-start: 0px;
    margin-block-end: 0px;
    display: flex;
  }
  .page-header-menu-item {
    padding-right: 1.5rem;
    user-select: none;
  }
  .page-header-menu-item.menu-scroll {
    display: none;
  }
  #page-header.fixed .page-header-menu-item.menu-scroll {
    display: inherit;
  }
  .page-header-menu-item a {
    color: inherit;
    text-decoration: inherit;
  }
</style>
