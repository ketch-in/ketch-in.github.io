<style>
  #download {
    position: relative;
    padding-top: 100px;
    width: 100vw;
    height: 100vh;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  #download ul.group {
    display: inline-block;
    text-align: center;

    list-style-type: none;
    margin-block-start: 0em;
    margin-block-end: 0em;
    padding-inline-start: 0px;
  }

  #download h1 {
    text-align: center;
    font-size: 2rem;
  }

  #download li.box {
    position: relative;
    width: 400px;
    height: 200px;
    display: inline-flex;
    justify-content: center;
    background-color: #d9d9d9;
    flex-direction: column;
    padding: 0px 40px;
    border: 1px solid #d9d9d9;
    user-select: none;
    cursor: pointer;
    margin-top: 10px;
  }

  #download li.box.disabled::before {
    content: "제공 예정입니다.";
    opacity: 0;
    height: 0px;
    width: 100%;
    position: absolute;
    bottom: 0px;
    left: 0px;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #377566e9;
    color: black;
    transition: 0.5s all;
    font-size: large;
    color: white;
    cursor: default;
  }
  #download li.box:hover {
    background-color: white;
    border: 1px solid black;
  }

  #download li.box.disabled:hover::before {
    height: 100%;
    opacity: 1;
  }

  #download li.box .label {
  }

  #download li.box h2 span {
    font-size: 1rem;
  }
</style>
