---
const { items } = Astro.props;
---

<section id="compatibility">
  <h1>호환성</h1>
  <div class="box">
    <ul>
      {items.map((item: string) => <li>{item}</li>)}
    </ul>
  </div>
</section>

<style>
  #compatibility {
    position: relative;
    padding-top: 100px;
    width: 100vw;
    height: 100vh;
    align-items: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  #compatibility h1 {
    text-align: center;
    font-size: 2rem;
  }

  #compatibility .box {
    width: 100%;
    display: flex;
    justify-content: center;
  }

  #compatibility .box ul {
    position: relative;
    display: flex;
    border-radius: 1px;
    background-color: #d9d9d9;
    border: 1px rgb(249 250 251 / 10%);
    padding: 32px 24px 16px 24px;
    min-width: 10rem;
    justify-content: space-around;
    width: 900px;
    list-style-type: none;
    margin-block-start: 0px;
    margin-block-end: 0px;
  }

  #compatibility ul li {
    padding: 20px 0px;
  }
</style>
